{
  packageRules: [
    {
      description: 'Auto merge container digests',
      matchDatasources: ['docker'],
      automerge: true,
      automergeType: 'branch',
      ignoreTests: true,
      matchUpdateTypes: ['digest'],
      matchPackagePattern: [
        'ghcr.io/onedr0p',
        'ghcr.io/bjw-s',
        'ghcr.io/auricom',
      ],
      schedule: ['after 2am on saturday', 'before 5am on saturday'],
      stabilityDays: 3,
    },
    {
      description: 'Auto merge GitHub Actions',
      matchDatasources: ['github-releases'],
      automerge: true,
      automergeType: 'branch',
      requiredStatusChecks: null,
      matchUpdateTypes: ['minor', 'patch', 'digest'],
      schedule: ['before 6am on saturday'],
      stabilityDays: 3,
    },
    {
      matchDatasources: [
        'docker',
        'github-actions',
        'github-releases',
        'github-tags',
        'helm',
      ],
      automerge: true,
      automergeType: 'branch',
      requiredStatusChecks: null,
      matchUpdateTypes: ['minor', 'patch'],
      matchPackageNames: [
        'ghcr.io/onedr0p/jackett',
        'ghcr.io/onedr0p/lidarr',
        'ghcr.io/onedr0p/prowlarr-nightly',
        'ghcr.io/onedr0p/qbittorrent',
        'ghcr.io/onedr0p/radarr',
        'ghcr.io/onedr0p/readarr',
        'ghcr.io/onedr0p/readarr-nightly',
        'ghcr.io/onedr0p/recyclarr',
        'ghcr.io/onedr0p/lidarr',
        'ghcr.io/onedr0p/sabnzbd',
        'ghcr.io/onedr0p/sonarr',
        'ghcr.io/onedr0p/sonarr-develop',
        'ghcr.io/onedr0p/plex',
        'renovatebot/github-action',
      ],
      schedule: ['after 2am every saturday', 'before 6am every saturday'],
      stabilityDays: 3,
    },
    {
      matchDatasources: ['docker'],
      automerge: false,
      requiredStatusChecks: null,
      matchUpdateTypes: ['major', 'minor', 'patch', 'digest'],
      groupName: 'Game Servers',
      labels: ['automerge-servers'],
      matchPackageNames: [
        'factoriotools/factorio',
        'wolveix/satisfactory-server',
      ],
    },
  ],
}
