{
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "digest"
      ],
      "matchPackagePattern": [
        "ghcr.io/onedr0p"
      ],
      "schedule": [
        "after 2am and before 6pm on saturday"
      ]
    },
    // Automerge game servers immediately
    {
      "matchDatasources": [
        "docker"
      ],
      "automerge": false,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "Factorio Servers",
      "labels": [
        "automerge-servers"
      ],
      "matchPackageNames": [
        "factoriotools/factorio",
        "ywolveix/satisfactory-server"
      ]
    }
  ]
}
